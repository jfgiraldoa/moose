    input = 'patch_recovery_test.i'
    exodiff = 'patch_out.e-s002'
    group = 'adaptive'
    max_parallel = 1
    max_threads = 1
    # PatchRecoveryErrorEstimator creates slighlty different refinement patterns when run on multiple processors, so this test must be limited to one.

