  [./test_err1]
    type = 'RunException'
    input = 'piecewise_linear_interpolation_material.i'
    prereq = test_scale_factor
    cli_args = "Materials/m2/xy_data='1 2'"
    expect_err = "Cannot specify 'x', 'y', and 'xy_data' together."
    issues = "#13224"
    design = "PiecewiseLinearInterpolationMaterial.md"
    requirement = 'PiecewiseLinearInterpolationMaterial shall throw an error if x, y, and xy_data are all specified'
  [../]
  [./test_err2]
    type = 'RunException'
    input = 'piecewise_linear_interpolation_material.i'
    prereq = test_err1
    cli_args = "Materials/m1/x='1 2 3'"
    expect_err = "Both 'x' and 'y' must be specified if either one is specified."
    issues = "#13224"
    design = "PiecewiseLinearInterpolationMaterial.md"
    requirement = 'PiecewiseLinearInterpolationMaterial shall throw an error if x and xy_data are both specified'
  [../]
  [./test_err3]
